<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Clock Frame (Circle) -->
    <!-- Center: 54,54, Radius: 30 -->
    <path
        android:pathData="M54,24 A30,30 0 1,1 54,84 A30,30 0 1,1 54,24"
        android:strokeWidth="4"
        android:strokeColor="#000000"
        android:fillColor="#00000000" />

    <!-- Center Dot -->
    <path
        android:pathData="M54,54 m-3,0 a3,3 0 1,1 6,0 a3,3 0 1,1 -6,0"
        android:fillColor="#000000" />

    <!-- Hour Hand (Short, pointing roughly to 10 o'clock) -->
    <path
        android:pathData="M54,54 L44,44"
        android:strokeWidth="4"
        android:strokeColor="#000000"
        android:strokeLineCap="round" />

    <!-- Minute Hand (Long, pointing roughly to 2 o'clock) -->
    <path
        android:pathData="M54,54 L62,38"
        android:strokeWidth="4"
        android:strokeColor="#000000"
        android:strokeLineCap="round" />

</vector>